{% extends 'base.html.twig' %}

{% block body %}
    <span id="home"></span>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <a class="navbar-brand js-scrollTo" href="#home">Vincent Plasson</a>
        <button style="border: solid #0e1c37 1px" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse pull-right-nav" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scrollTo" href="#about">À PROPOS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scrollTo" href="#portfolio">PORTFOLIO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scrollTo" href="#contact">CONTACT</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">ACTU</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- End Navbar -->

    <!-- Banner -->
    <div class="container-fluid">
        <div class="row banner">
            <div class="col">
                <div class="row justify-content-center home-background" style="background-image: url('{{ asset('uploads/images/identity/' ~ identities[0].backgroundimg) }}')">
                    <div class="align-self-center profile-img" style="background-image: url('{{ asset('uploads/images/identity/' ~ identities[0].profileimg) }}')"></div>
                    <p>Developpeur Web</p>
                    <a href="#about" class="js-scrollTo click-down bounce"><i class="fa fa-chevron-down"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- End Banner -->

    <!-- About -->
    <div class="container" id="about">
        <section class="about">
            <h2 class="text-center">À propos</h2>
            <div class="row">
                <div class="col-md text-center">
                    <p>{{ identities[0].description }}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <a href="http://www.42.fr/" class="col-md-3 d-none d-md-block" target="_blank"><img src="https://www.erenumerique.fr/wp-content/uploads/2017/02/e%CC%81cole-42-800x600.jpg" alt="ecole 42"></a>
                <a href="https://wildcodeschool.fr/" class="col-md-3 d-none d-md-block" target="_blank"><img src="https://www.jds.fr/medias/image/0-42179800-1496335948-64638-600-600-F.jpg" alt="ecole Wild Code School"></a>
                <div class="col-md-3"></div>
            </div>
        </section>
    </div>
    <!-- End About -->

    <!-- Portfolio -->
    <div class="container-fluid background-portfolio">
        <section class="portfolio" id="portfolio">
            <h2 class="text-center">Portfolio</h2>
            <div class="row">
                {% for project in projects %}
                    <div class="col-md-4 col-sm-6 portfolio-item">
                        <a class="portfolio-link" href="#">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img class="img-fluid" src="{{ asset('uploads/images/project/' ~ project.projectimg) }}" alt="">
                        </a>
                        <div class="portfolio-caption">
                            <h4>{{ project.projecttitle }}</h4>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
    <!-- End Portfolio -->

    <!-- Contact -->
    <div class="container">
        <section class="contact" id="contact">
            <h2 class="text-center">Contact</h2>
            <form method="post" action="#contact">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Nom</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">E-Mail</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Téléphone</label>
                    <input type="tel" class="form-control" id="exampleFormControlInput1">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Message</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
            </form>
        </section>
    </div>
    <!-- End Contact -->

    <!-- Footer -->
    <div class="container-fluid background-footer">
        <footer class="text-center">
            <p>Site créé par Vincent Plasson.</p>
        </footer>
    </div>
    <!-- End Footer -->
{% endblock %}